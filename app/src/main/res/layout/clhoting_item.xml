<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/clothing_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/circle_dress" />

    <TextView
        android:id="@+id/clothing_title"
        android:text="@string/abc_action_bar_home_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/clothing_image"
        android:layout_toEndOf="@id/clothing_image"/>

    <TextView
        android:id="@+id/clothing_price"
        android:text="$32.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        style="?android:textAppearanceMedium"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/clothing_subtitle"
        android:text="Esta es una prenda, esta es una prenda bonita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:textAppearanceSmall"
        android:layout_below="@id/clothing_title"
        android:layout_toRightOf="@id/clothing_image"
        android:layout_toEndOf="@id/clothing_image"
        android:layout_toStartOf="@id/clothing_price"
        android:layout_toLeftOf="@id/clothing_price"
        android:layout_alignLeft="@id/clothing_title"
        android:layout_alignStart="@id/clothing_title" />

</RelativeLayout>

